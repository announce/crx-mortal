{
  "name": "crx-mortal",
  "version": "1.0.1",
  "description": "A Chrome extension to help Mahjong players spot their less optimal moves",
  "scripts": {
    "watch": "webpack --config webpack/webpack.dev.js --watch",
    "build": "npm-run-all style clean build:** bundle",
    "build:manifest": "./app update-manifest-version",
    "build:js": "webpack --config webpack/webpack.prod.js",
    "bundle": "./app bundle-dist",
    "clean": "rimraf dist",
    "test": "npx jest",
    "style": "prettier --write \"src/**/*.{ts,tsx}\" \"public/**/*.{json,html,css}\""
  },
  "author": "Kenta Yamamoto <ymkjp@jaist.ac.jp>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/announce/crx-mortal.git"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.158",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "copy-webpack-plugin": "^9.0.1",
    "glob": "^7.1.6",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2 ",
    "ts-jest": "^29.1.0",
    "ts-loader": "^8.0.0",
    "typescript": "^5.0.4",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.0.0",
    "webpack-merge": "^5.0.0"
  }
}
